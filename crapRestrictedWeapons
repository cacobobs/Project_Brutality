	+FIXMAPTHINGPOS
	+NORADIUSDMG
	+USESPECIAL
	+MTHRUSPECIES
	+DONTHURTSPECIES
	+NEVERFAST
	Activation THINGSPEC_Activate
	
    States
    {
	
	Spawn:
		RIFL A 1 A_Look
		TNT1 A 0 A_GiveInventory("TargetIsAMarine", 1)
        TNT1 A 0 A_JumpIfCloser(30, "Prompt")
		RIFL A 1 A_Look
		Goto See
		
    See:
		TNT1 A 0 //A_Chase
        TNT1 A 0 A_JumpIfCloser(30, "Prompt")
