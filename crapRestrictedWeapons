        Goto Spawn
		
	Prompt2:
		TNT1 A 0 A_CustomMissile ("WeaponTitleSwap", 20, 0, 0, 2, 90)
		RIFL A 40
        Goto Spawn
		
	GiveRifle:
		 TNT1 A 0 A_JumpIfInventory("NoCheating", 1, 4)
		 TNT1 A 0 A_GiveToTarget("NewClip", 10)
		 TNT1 A 0 A_GiveInventory("NoCheating", 1)
		 TNT1 A 0 A_Playsound("CLIPIN", 0)
		 TNT1 AAA 0
